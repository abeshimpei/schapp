<div class="infomation">
 <h2>スケジュール一覧</h2>

 <% if flash[:notice] %>
 <p class="alert alert__success"><%= flash[:notice] %></p>
 <% end %>

</div>
<table>
 <thead>
  <tr>
   <th>ID</th>
   <th>タイトル</th>
   <th>開始日</th>
   <th>終了日</th>
   <th>終日</th>
   <th>スケジュール更新日</th>
   <th>確認</th>
   <th>編集</th>
   <th>削除</th>
  </tr>
 </thead>
 
 <tbody>

 <% @users.each do |user| %>
    <tr>
     <td><%= user.id %></td>
     <td><%= user.title %></td>
     <td><%= user.start.strftime("%Y年 %m月 %d日") %></td>
     <td><%= user.endday.strftime("%Y年 %m月 %d日")%></td>
     <td>
     <% if user.allday == true%>
       ○
      <% else %>
       ––
      <% end %>
     </td>
     <td><%= user.updated_at.to_s(:datetime_jp)%></td>
     <td>
     <%= link_to "確認", user%>
     </td>
     <td>
     <%= link_to "編集", edit_user_path(user)%>
     </td>
     <td>
     <%= link_to "削除", user, method: :delete, data: {confirm: "本当に削除しますか？" } %>
     </td>
    </tr>
    <% end %>
  </tbody>
  
  
  
 
 </table>
 <%=link_to "スケジュール新規登録",new_user_path%>
 
 
 <footer>
 
  <h1>現在の日時：<span class= "mgr-10"><%= Date.current.strftime("%Y年 %m月 %d日") %></span>スケジュール合計 : <%= User.count%></h1>
  
 </footer>
 