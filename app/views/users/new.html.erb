<h3>スケジュール新規作成</h3>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user do |f| %>
  <table>
   <tr>
    <th><%= f.label:title, "タイトル" %></th>
    <td><%= f.text_field:title %></td>
   </tr>

   <tr>
    <th><%= f.label:start, "開始日" %></th>
    <td><%= f.date_field:start %></td>
   </tr>

   <tr>
    <th><%= f.label:endday, "終了日" %></th>
    <td><%= f.date_field:endday %></td>
   </tr>

   <tr>
    <th><%= f.label:allday, "終日" %></th>
    <td><%= f.check_box :allday %>終日の場合はチェックを入れます</td>
   </tr>

   <tr>
    <th><%= f.label:coment, "スケジュールメモ" %></th>
    <td><%= f.text_area:coment, class:"textbox" %></td>
   </tr>
  
  </table>

  <div>
   <ul>
    <li><%= f.submit "スケジュールを新規登録する"%></li>
    <li><%= link_to "スケジュール一覧へ戻る", :users %></li>
   </ul>
  </div>
  <footer>
  <h1>現在の日時：<%= Date.current.strftime("%Y年 %m月 %d日") %></h1>
  </footer>
<% end %>